<UserControl
    x:Class="Haihv.Vbdlis.Tools.Desktop.Views.Controls.SidebarControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Haihv.Vbdlis.Tools.Desktop.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="266"
    x:DataType="vm:MainWindowViewModel"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto, *, Auto">
        <!--  Phần trên cùng: Tiêu đề và thông tin đăng nhập  -->
        <Border
            Grid.Row="0"
            Padding="10"
            BorderBrush="#cccccc"
            BorderThickness="0,0,0,1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Xin chào," />
                    <TextBlock FontWeight="SemiBold" Text="{Binding LoggedInUsername}" />
                </StackPanel>
                <TextBlock
                    Margin="0,2,0,0"
                    FontSize="10"
                    Foreground="Gray"
                    Text="{Binding LoggedInServer}" />
            </StackPanel>
        </Border>

        <!--  Phần giữa: Menu  -->
        <ScrollViewer Grid.Row="1" Padding="0,10">
            <StackPanel Spacing="2">
                <Button
                    Padding="15,10"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ShowHomeCommand}"
                    Content="Trang chủ"
                    ToolTip.Tip="Quay lại trang chủ" />

                <Button
                    Padding="15,10"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ShowCungCapThongTinCommand}"
                    Content="Cung cấp thông tin"
                    ToolTip.Tip="Cung cấp thông tin giấy chứng nhận" />

                <Separator Margin="0,0" />

                <Button
                    Padding="15,10"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding LogoutCommand}"
                    Content="Đăng xuất"
                    Foreground="Red" />
            </StackPanel>
        </ScrollViewer>

        <!--  Phần dưới cùng: Giới thiệu  -->
        <Border Grid.Row="2" Padding="10">
            <StackPanel>
                <Separator Margin="0,0,0,10" />
                <TextBlock
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Thông tin giới thiệu" />
                <TextBlock
                    FontSize="11"
                    Foreground="Gray"
                    Text="{x:Static vm:MainWindowViewModel.AppVersionText}" />
                <TextBlock
                    FontSize="11"
                    Foreground="Gray"
                    Text="{x:Static vm:MainWindowViewModel.CopyrightText}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
