<UserControl
    x:Class="Haihv.Vbdlis.Tools.Desktop.Views.Controls.SearchInputControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Haihv.Vbdlis.Tools.Desktop.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:CungCapThongTinViewModel"
    mc:Ignorable="d">
    <StackPanel Spacing="12">
        <!--  Tìm theo Số Giấy Tờ  -->
        <Grid IsVisible="{Binding IsSoGiayToMode}" RowDefinitions="Auto,*,Auto,Auto" RowSpacing="8">
            <TextBlock FontWeight="SemiBold" Text="Tìm theo Số Giấy Tờ" />

            <Grid Grid.Row="1" RowDefinitions="*,Auto">
                <TextBox
                    Grid.Row="0"
                    AcceptsReturn="True"
                    Text="{Binding SearchInput, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    MinLines="10"
                    Watermark="Hỗ trợ nhập nhiều mục, mỗi mục trên một dòng hoặc phân cách bằng dấu chấm phẩy ;. Nếu muốn giữ dấu cách, đặt trong dấu nháy &quot;&quot;." />
                <Label
                    Grid.Row="1"
                    Content="Hỗ trợ nhập nhiều mục, mỗi mục trên một dòng hoặc phân cách bằng dấu chấm phẩy ;. Nếu muốn giữ dấu cách, đặt trong dấu nháy &quot;&quot;."
                    VerticalAlignment="Stretch"
                    FontSize="11"
                    Foreground="Gray" />
            </Grid>

            <Button
                Grid.Row="2"
                Command="{Binding SearchBySoGiayToCommand}"
                Content="Tìm"
                IsEnabled="{Binding !IsSearching}" />

            <ListBox
                Grid.Row="3"
                ItemsSource="{Binding SearchHistory}"
                SelectedItem="{Binding SelectedSearchHistory}" />
        </Grid>

        <!--  Tìm theo Số Phát Hành  -->
        <Grid IsVisible="{Binding IsSoPhatHanhMode}" RowDefinitions="Auto,*,Auto,Auto" RowSpacing="8">
            <TextBlock FontWeight="SemiBold" Text="Tìm theo Số Phát Hành" />

            <Grid Grid.Row="1" RowDefinitions="*,Auto">
                <TextBox
                    Grid.Row="0"
                    AcceptsReturn="True"
                    Text="{Binding SearchInput, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    MinLines="10"
                    Watermark="Hỗ trợ nhập nhiều mục, mỗi mục trên một dòng hoặc phân cách bằng dấu chấm phẩy ;" />
                <Label
                    Grid.Row="1"
                    Content="Hỗ trợ nhập nhiều mục, mỗi mục trên một dòng hoặc phân cách bằng dấu chấm phẩy ;"
                    FontSize="11"
                    Foreground="Gray" />
            </Grid>

            <Button
                Grid.Row="2"
                Command="{Binding SearchBySoPhatHanhCommand}"
                Content="Tìm"
                IsEnabled="{Binding !IsSearching}" />

            <ListBox
                Grid.Row="3"
                ItemsSource="{Binding SearchHistory}"
                SelectedItem="{Binding SelectedSearchHistory}" />
        </Grid>

        <!--  Tìm theo Thửa Đất (tạm thời disable)  -->
        <Grid IsVisible="{Binding IsThuaDatMode}" RowDefinitions="Auto,*,Auto,Auto" RowSpacing="8">
            <TextBlock FontWeight="SemiBold" Text="Tìm theo Thửa Đất" />
            <TextBox
                Grid.Row="1"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                IsEnabled="False"
                Watermark="Chưa hỗ trợ" />
            <Button Grid.Row="2" Content="Tìm" IsEnabled="False" />
            <ListBox Grid.Row="3" IsEnabled="False" />
        </Grid>
    </StackPanel>
</UserControl>