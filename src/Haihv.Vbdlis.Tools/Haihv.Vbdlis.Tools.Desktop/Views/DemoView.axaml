<UserControl
    x:Class="Haihv.Vbdlis.Tools.Desktop.Views.DemoView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Haihv.Vbdlis.Tools.Desktop.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:DemoViewModel"
    mc:Ignorable="d">

    <Grid Margin="20">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="20">

            <!--  Title  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Text="{Binding Title}" />

            <!--  Description  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="Gray"
                Text="{Binding Description}"
                TextWrapping="Wrap" />

            <!--  Counter Display  -->
            <Border
                Padding="30,20"
                Background="{DynamicResource SystemAccentColor}"
                BorderBrush="{DynamicResource SystemAccentColorDark1}"
                BorderThickness="2"
                CornerRadius="10">
                <StackPanel Spacing="10">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Bộ đếm" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="48"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding Counter}" />
                </StackPanel>
            </Border>

            <!--  Message  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Text="{Binding Message}" />

            <!--  Buttons  -->
            <StackPanel
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="15">
                <Button
                    Padding="20,10"
                    Command="{Binding IncrementCounterCommand}"
                    Content="Tăng bộ đếm" />
                <Button
                    Padding="20,10"
                    Command="{Binding ResetCounterCommand}"
                    Content="Reset" />
            </StackPanel>

            <!--  Info  -->
            <Border
                Margin="0,20,0,0"
                Padding="15"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Thông tin:" />
                    <TextBlock
                        FontSize="11"
                        Foreground="Gray"
                        Text="• View này được tạo động qua TransitioningContentControl" />
                    <TextBlock
                        FontSize="11"
                        Foreground="Gray"
                        Text="• Chỉ được khởi tạo khi người dùng mở view" />
                    <TextBlock
                        FontSize="11"
                        Foreground="Gray"
                        Text="• Sử dụng DataTemplate để render UI" />
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>

</UserControl>
