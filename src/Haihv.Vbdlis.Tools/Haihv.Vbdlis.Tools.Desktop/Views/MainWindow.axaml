<Window
    x:Class="Haihv.Vbdlis.Tools.Desktop.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Haihv.Vbdlis.Tools.Desktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sidebarControls="using:Haihv.Vbdlis.Tools.Desktop.Views.Controls"
    xmlns:views="using:Haihv.Vbdlis.Tools.Desktop.Views"
    xmlns:vm="using:Haihv.Vbdlis.Tools.Desktop.ViewModels"
    Title="Công cụ VBDLIS"
    Width="1200"
    Height="700"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    x:DataType="vm:MainWindowViewModel"
    Icon="avares://Haihv.Vbdlis.Tools.Desktop/Assets/appicon.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <!--  Main Content: Show Login or Home based on IsLoggedIn  -->
    <Panel>

        <!--  Login Screen (shown when not logged in)  -->
        <Grid Background="{DynamicResource SystemAltHighColor}" IsVisible="{Binding !IsLoggedIn}">
            <controls:LoginControl
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DataContext="{Binding LoginViewModel}" />
        </Grid>
        <!--  Main Application (shown when logged in)  -->
        <SplitView
            DisplayMode="Inline"
            IsPaneOpen="True"
            IsVisible="{Binding IsLoggedIn}"
            OpenPaneLength="296">
            <SplitView.Pane>
                <!--  Sidebar  -->
                <sidebarControls:SidebarControl x:Name="SidebarControl" />
            </SplitView.Pane>

            <!--  Main Content Area with Transitions - Uses ViewLocator for automatic View resolution  -->
            <TransitioningContentControl Content="{Binding CurrentViewModel}" />
        </SplitView>
    </Panel>

</Window>
