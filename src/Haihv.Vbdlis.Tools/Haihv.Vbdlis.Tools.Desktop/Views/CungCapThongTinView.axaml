<UserControl
    x:Class="Haihv.Vbdlis.Tools.Desktop.Views.CungCapThongTinView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Haihv.Vbdlis.Tools.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Haihv.Vbdlis.Tools.Desktop.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:CungCapThongTinViewModel"
    mc:Ignorable="d">
    <Grid Margin="15" RowDefinitions="Auto,*,Auto">
        <!--  Toolbar - Search Buttons  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15"
            Orientation="Horizontal"
            Spacing="10">
            <Button Command="{Binding SearchBySoGiayToCommand}" Content="Tìm kiếm theo Số Giấy Tờ" />
            <Button Command="{Binding SearchBySoPhatHanhCommand}" Content="Tìm kiếm theo Số Phát Hành" />
            <Button Content="Tìm kiếm theo Thửa Đất" IsEnabled="False" />
        </StackPanel>

        <!--  Results DataGrid  -->
        <local:KetQuaTimKiemDataGridControl x:Name="ResultsDataGrid" Grid.Row="1" />

        <!--  Status Bar  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,15,0,0"
            Spacing="6">
            <StackPanel IsVisible="{Binding AreSearchDetailsVisible}" Orientation="Horizontal" Spacing="6">
                <TextBlock Text="Đang tìm:" />
                <TextBlock FontWeight="SemiBold" Text="{Binding CurrentSearchDisplay}" />
            </StackPanel>

            <Grid
                HorizontalAlignment="Stretch"
                ColumnDefinitions="*,Auto"
                ColumnSpacing="10"
                IsVisible="{Binding IsStatusVisible}">
                <ProgressBar
                    Grid.Column="0"
                    Height="10"
                    Maximum="{Binding ProgressMaximum}"
                    Value="{Binding ProgressValue}" />
                <TextBlock Grid.Column="1" FontSize="12">
                    <Run Text="{Binding ProgressValue, StringFormat='{}{0:0}'}" />
                    <Run Text="/" />
                    <Run Text="{Binding ProgressMaximum, StringFormat='{}{0:0}'}" />
                    <Run Text=" - " />
                    <Run Text="{Binding ProgressPercentage, StringFormat='{}{0:0}%'}" />
                </TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
