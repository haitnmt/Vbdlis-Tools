<UserControl
    x:Class="Haihv.Vbdlis.Tools.Desktop.Views.CungCapThongTinView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vc="using:Haihv.Vbdlis.Tools.Desktop.Views.Controls"
    xmlns:vm="using:Haihv.Vbdlis.Tools.Desktop.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:CungCapThongTinViewModel"
    mc:Ignorable="d">
    <Grid Margin="15" ColumnDefinitions="320,*" RowDefinitions="*,Auto" ColumnSpacing="15">
        <vc:SearchInputControl Grid.Row="0" Grid.Column="0" />

        <!--  Results DataGrid  -->
        <vc:KetQuaTimKiemDataGridControl x:Name="ResultsDataGrid" Grid.Row="0" Grid.Column="1" />

        <!--  Status Bar  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2" Grid.Column="0"
            Margin="0,15,0,0"
            ColumnDefinitions="Auto,*,Auto,Auto"
            IsVisible="{Binding IsStatusVisible}"
            ColumnSpacing="10">
            <TextBlock
                Grid.Column="0"
                FontSize="12"
                Text="{Binding StatusSummary}" />
            <TextBlock
                Grid.Column="2"
                FontSize="12">
                <Run Text="{Binding ProgressValue, StringFormat='{}{0:0}'}" />
                <Run Text="/" />
                <Run Text="{Binding ProgressMaximum, StringFormat='{}{0:0}'}" />
                <Run Text="(" />
                <Run Text="{Binding ProgressPercentage, StringFormat='{}{0:0}%'}" />
                <Run Text=")" />
            </TextBlock>
            <ProgressBar
                Grid.Column="3"
                MaxWidth="200"
                Height="10"
                Maximum="{Binding ProgressMaximum}"
                Value="{Binding ProgressValue}" />
        </Grid>
    </Grid>
</UserControl>